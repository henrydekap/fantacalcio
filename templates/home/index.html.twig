{% extends 'base.html.twig' %}

{% block title %}SbrambaFantacalcio Manager{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>{{ squad_name }}</h1>
    <a class="btn btn-primary" href="{{ path('season_new') }}">Add Season</a>
    <table class="table table-hover mt-1">
        <thead class="thead-light">
        <tr>
            <th>Name</th>
            <th>Link</th>
        </tr>
        </thead>
        <tbody>
        {% for season in season_list %}
            <tr class="season-list" >
                <td>{{ season.name }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('season_show') }}">Select</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
